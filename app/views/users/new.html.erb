<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@user) do |f| %>
      
      <%= render 'shared/error_messages', obj: f.object %> 

      <%= render 'fields', f: f %> 

      <%= f.submit "Create my account", class: "btn brn-large btn-primary"%>
    <% end %>
  </div>
</div>